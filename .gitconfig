[user]
    email = iam2kabhishek@gmail.com
    name = Abhishek Keshri

[credential]
    helper = cache --timeout 3600

[core]
    editor = nvim
    pager = delta --dark --highlight-removed
	excludesFile = ~/.gitignore

[interactive]
    diffFilter = delta --color-only --highlight-removed

[color]
    ui = true

[protocol]
    version = 2

[pull]
    rebase = false

[init]
    defaultBranch = main

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[include]
    path = ~/.config/delta/delta.gitconfig

[delta]
    features = mantis-shrimp

