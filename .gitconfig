    email = iam2kabhishek@gmail.com
    name = Abhishek Keshri
    signingkey = 5FE4F23032EE62A5BED6101187ABE188E6B98D1C

[commit]
    gpgSign = true

[credential]
    helper = cache --timeout 3600

[core]
    editor = nvim
    pager = delta --dark
    excludesFile = ~/.gitignore

[interactive]
    diffFilter = delta --color-only --highlight-removed

[color]
    ui = true

[protocol]
    version = 2

[push]
    autoSetupRemote = true

[pull]
    rebase = false

[init]
    defaultBranch = main

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[include]
    path = ~/.config/delta/delta.gitconfig

[delta]
    features = mantis-shrimp
